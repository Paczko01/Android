<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rules"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Rules">

    <TextView
        android:id="@+id/text_Step_full4"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="2 játékos esetén a fehér kezd."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Step_full3" />

    <TextView
        android:id="@+id/text_Step_full3"
        android:layout_width="306dp"
        android:layout_height="109dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Haladni csak egyenesen, illetve átlósan előlre fele lehet. Oldalra, illetve visszafele lépni semmilyen esetben se lehetséges."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Step_full2" />

    <TextView
        android:id="@+id/text_Step_full2"
        android:layout_width="315dp"
        android:layout_height="54dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Másik bábút leütni, illetve átlépni nem lehet."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Step_full" />

    <TextView
        android:id="@+id/text_Step"
        android:layout_width="194dp"
        android:layout_height="41dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Lehetséges lépés"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_Step_full"
        android:layout_width="315dp"
        android:layout_height="107dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="A kezdő játékos bármelyik bábuval léphet, azt követően amilyen színű mezőre lép, az ellenfélnek az azzal azonos színű bábújával kell lépnie."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Step" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kamisado_colored" />

    <TextView
        android:id="@+id/text_Goal"
        android:layout_width="144dp"
        android:layout_height="38dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="A játék célja"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_Goal_full"
        android:layout_width="315dp"
        android:layout_height="127dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="A játék célja, hogy egy bábunkat átjuttassuk az ellenfél első sorába. Ha ellenfelünk nem tud lépni, szintén veszített"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Goal" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color"
        android:text="Vissza"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Step_full4" />

</androidx.constraintlayout.widget.ConstraintLayout>